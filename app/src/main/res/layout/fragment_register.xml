<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_register_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="手机号/邮箱/用户名"
        android:maxLines="1"
        android:theme="@style/LoginEditText" />

    <requestFocus />

    <EditText
        android:id="@+id/input_register_pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:theme="@style/LoginEditText" />

    <EditText
        android:id="@+id/input_pwd_again"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:theme="@style/LoginEditText" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/input_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="验证码"
            android:maxLines="1"
            android:theme="@style/LoginEditText"/>

        <ImageView
            android:id="@+id/image_code"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@color/colorGrayLight"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_confirm"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/text_under_login_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:text="@string/text_under_login"
        android:textColor="@drawable/selector_text" />

</LinearLayout>